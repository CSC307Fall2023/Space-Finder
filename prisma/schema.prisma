// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  username     String        @unique
  email        String        @unique
  password     String
  bio          String
  school       String
  profilePic   String
  savedSpaces  Int[]
  studySpaces  studySpace[]
  reports      report[]
  comments     comment[]
  reservations reservation[]
  Rating       Rating[]
}

model studySpace {
  id           Int           @id @default(autoincrement())
  name         String
  building     String
  longitude    Float
  latitude     Float
  owner        User          @relation(fields: [ownerId], references: [id])
  ownerId      Int
  capacity     Int
  busyness     Float
  flagged      Boolean       @default(false)
  amenities    String[]
  comments     comment[]
  reports      report[]
  reservations reservation[]
  img          String
  rating       Rating[]
  avgRating    Float         @default(0)
}

model Rating {
  id           Int        @id @default(autoincrement())
  value        Float
  user         User       @relation(fields: [userId], references: [id])
  userId       Int
  studySpace   studySpace @relation(fields: [studySpaceId], references: [id])
  studySpaceId Int

  @@unique([userId, studySpaceId])
}

model comment {
  id           Int        @id @default(autoincrement())
  text         String
  owner        User       @relation(fields: [ownerId], references: [id])
  ownerId      Int
  studySpace   studySpace @relation(fields: [studySpaceId], references: [id])
  studySpaceId Int
}

model reservation {
  id           Int        @id @default(autoincrement())
  owner        User       @relation(fields: [ownerId], references: [id])
  ownerId      Int
  studySpace   studySpace @relation(fields: [studySpaceId], references: [id])
  studySpaceId Int
}

model report {
  id           Int        @id @default(autoincrement())
  spotName     String
  userName     String
  reason       String
  owner        User       @relation(fields: [ownerId], references: [id])
  ownerId      Int
  studySpace   studySpace @relation(fields: [studySpaceId], references: [id])
  studySpaceId Int
}
